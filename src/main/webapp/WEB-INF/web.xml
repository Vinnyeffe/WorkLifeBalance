<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>WorkLifeBalance</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<filter>
		<display-name>UserFilter</display-name>
		<filter-name>UserFilter</filter-name>
		<filter-class>it.unisa.wlb.utils.UserFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<servlet-name>AddEmployeesToProjectServlet</servlet-name>
		<servlet-name>AddEmployeeToList</servlet-name>
		<servlet-name>AddPlanimetryServlet</servlet-name>
		<servlet-name>AddProjectServlet</servlet-name>
		<servlet-name>CheckEmployeeServlet</servlet-name>
		<servlet-name>EmployeeInsertPageServlet</servlet-name>
		<servlet-name>EmployeeRegistrationServlet</servlet-name>
		<servlet-name>EmployeeListPageServlet</servlet-name>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-name>ModifyProjectServlet</servlet-name>
		<servlet-name>PlanimetryInsertionPageServlet</servlet-name>
		<servlet-name>ProjectInsertPageServlet</servlet-name>
		<servlet-name>ProjectsListPageServlet</servlet-name>
		<servlet-name>SearchEmployeeServlet</servlet-name>
		<servlet-name>SearchProjectServlet</servlet-name>
		<servlet-name>ShowProjectServlet</servlet-name>
		<servlet-name>ShowSmartWorkingPrenotationServlet</servlet-name>
		<servlet-name>ShowWorkstationPrenotationPageServlet</servlet-name>
		<servlet-name>SmartWorkingDaysPrenotationServlet</servlet-name>
		<servlet-name>SuggestionEmployees</servlet-name>
		<servlet-name>WorkstationPrenotationServlet</servlet-name>
		<servlet-name>WorkstationsAvailabilityServlet</servlet-name>
	</filter-mapping>
	
	<filter>
		<display-name>DenyEmployee</display-name>
		<filter-name>DenyEmployee</filter-name>
		<filter-class>it.unisa.wlb.utils.DenyEmployee</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>DenyEmployee</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<servlet-name>AddEmployeesToProjectServlet</servlet-name>
		<servlet-name>AddEmployeeToList</servlet-name>
		<servlet-name>AddPlanimetryServlet</servlet-name>
		<servlet-name>AddProjectServlet</servlet-name>
		<servlet-name>CheckEmployeeServlet</servlet-name>
		<servlet-name>EmployeeInsertPageServlet</servlet-name>
		<servlet-name>EmployeeRegistrationServlet</servlet-name>
		<servlet-name>EmployeeListPageServlet</servlet-name>
		<servlet-name>ModifyProjectServlet</servlet-name>
		<servlet-name>PlanimetryInsertionPageServlet</servlet-name>
		<servlet-name>ProjectInsertPageServlet</servlet-name>
		<servlet-name>ProjectsListPageServlet</servlet-name>
		<servlet-name>SearchEmployeeServlet</servlet-name>
		<servlet-name>SearchProjectServlet</servlet-name>
		<servlet-name>ShowProjectServlet</servlet-name>
		<servlet-name>SuggestionEmployees</servlet-name>
	</filter-mapping>
	
	<filter>
		<display-name>DenyAdmin</display-name>
		<filter-name>DenyAdmin</filter-name>
		<filter-class>it.unisa.wlb.utils.DenyAdmin</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>DenyAdmin</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<servlet-name>ShowSmartWorkingPrenotationServlet</servlet-name>
		<servlet-name>ShowWorkstationPrenotationPageServlet</servlet-name>
		<servlet-name>SmartWorkingDaysPrenotationServlet</servlet-name>
		<servlet-name>WorkstationPrenotationServlet</servlet-name>
		<servlet-name>WorkstationsAvailabilityServlet</servlet-name>
	</filter-mapping>
	
	<filter>
		<display-name>DenyManager</display-name>
		<filter-name>DenyManager</filter-name>
		<filter-class>it.unisa.wlb.utils.DenyManager</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>DenyManager</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<servlet-name>AddEmployeesToProjectServlet</servlet-name>
		<servlet-name>AddEmployeeToList</servlet-name>
		<servlet-name>AddPlanimetryServlet</servlet-name>
		<servlet-name>AddProjectServlet</servlet-name>
		<servlet-name>CheckEmployeeServlet</servlet-name>
		<servlet-name>EmployeeInsertPageServlet</servlet-name>
		<servlet-name>EmployeeRegistrationServlet</servlet-name>
		<servlet-name>EmployeeListPageServlet</servlet-name>
		<servlet-name>ModifyProjectServlet</servlet-name>
		<servlet-name>PlanimetryInsertionPageServlet</servlet-name>
		<servlet-name>ProjectInsertPageServlet</servlet-name>
		<servlet-name>SearchEmployeeServlet</servlet-name>
		<servlet-name>SearchProjectServlet</servlet-name>
		<servlet-name>SuggestionEmployees</servlet-name>
	</filter-mapping>
	
</web-app>