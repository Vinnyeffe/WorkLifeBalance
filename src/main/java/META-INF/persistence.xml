<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="WorkLifeBalance">
		<class>it.unisa.wlb.model.bean.Admin</class>
		<class>it.unisa.wlb.model.bean.PrenotationDate</class>
		<class>it.unisa.wlb.model.bean.PrenotationDatePK</class>
		<class>it.unisa.wlb.model.bean.Employee</class>
		<class>it.unisa.wlb.model.bean.Floor</class>
		<class>it.unisa.wlb.model.bean.Message</class>
		<class>it.unisa.wlb.model.bean.Project</class>
		<class>it.unisa.wlb.model.bean.Room</class>
		<class>it.unisa.wlb.model.bean.RoomPK</class>
		<class>it.unisa.wlb.model.bean.SmartWorkingPrenotation</class>
		<class>it.unisa.wlb.model.bean.SmartWorkingPrenotationPK</class>
		<class>it.unisa.wlb.model.bean.Workstation</class>
		<class>it.unisa.wlb.model.bean.WorkstationPrenotation</class>
		<class>it.unisa.wlb.model.bean.WorkstationPrenotationPK</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/worklifebalance"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
			
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.autocommit" value="true" />
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
		</properties>
	</persistence-unit>
</persistence>
